<%= @cocktail.name %>
<%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: "Remove #{cocktail.name}?" } do %>
          remove
        <% end %>
<%= link_to "add new ingredient", new_cocktail_dose_path(@cocktail.id) %>
<% @cocktail.doses.each do |dose| %>
  <%= dose.description %>
  <%= dose.ingredient.name %>
  <%= link_to dose_path(dose), method: :delete, data: { confirm: "Remove #{dose.description} #{dose.ingredient.name}?" } do %>
      remove
   <% end %>
<% end %>
